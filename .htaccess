<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Permitir acesso direto a arquivos que existem na raiz (se necess치rio)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Permitir acesso direto a diret칩rios que existem na raiz (se necess치rio)
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Redirecionar tudo para public/index.php (Laravel)
    # Exceto se j치 estiver tentando acessar public/
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/index.php [L]
</IfModule>

